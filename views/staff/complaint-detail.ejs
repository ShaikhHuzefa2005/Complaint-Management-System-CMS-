<%- include('../partials/head') %>

<body class="bg-[var(--white)] text-[var(--highlight)]">
<div class="min-h-screen flex">

  <%- include('../partials/sidebar-staff') %>

  <main class="flex-1 p-8 md:p-10 space-y-8 overflow-auto">
    <header class="flex items-center gap-4">
      <a href="/staff/complaints" class="text-gray-400 hover:text-[var(--highlight)]">
        <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 5l-7 7 7 7"/></svg>
      </a>
      <div>
        <h1 class="text-3xl font-semibold text-[var(--highlight-light)]"><%= complaint.title %></h1>
        <p class="mt-1 text-sm text-gray-500">#CMS<%= complaint.id %> â€¢ <%= complaint.category %></p>
      </div>
    </header>

    <%- include('../partials/flash') %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- MAIN -->
      <div class="lg:col-span-2 space-y-6">

        <!-- COMPLAINT INFO -->
        <div class="bg-white rounded-2xl border p-6">
          <div class="space-y-4 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-500">Student</span>
              <span class="font-medium"><%= complaint.student_name %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-500">Category</span>
              <span class="font-medium"><%= complaint.category %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-500">Submitted</span>
              <span class="font-medium"><%= new Date(complaint.created_at).toLocaleString() %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-500">Current Status</span>
              <% if (complaint.status === 'open') { %>
                <span class="px-3 py-1 rounded-full text-xs bg-red-100 text-red-600">Open</span>
              <% } else if (complaint.status === 'in_progress') { %>
                <span class="px-3 py-1 rounded-full text-xs bg-yellow-100 text-yellow-700">In Progress</span>
              <% } else { %>
                <span class="px-3 py-1 rounded-full text-xs bg-green-100 text-green-700">Resolved</span>
              <% } %>
            </div>
          </div>
          <div class="mt-6 pt-6 border-t">
            <p class="text-gray-500 text-sm mb-2">Description</p>
            <p class="text-sm leading-relaxed"><%= complaint.description %></p>
          </div>
        </div>

        <!-- UPDATE STATUS FORM -->
        <div class="bg-white rounded-2xl border p-6">
          <h3 class="font-semibold mb-4">Update Status</h3>
          <form action="/staff/complaints/<%= complaint.id %>/update" method="POST" class="space-y-4">
            <div>
              <label class="block text-sm font-medium mb-2">New Status</label>
              <select name="status" class="w-full border rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--highlight-light)]" required>
                <option value="open" <%= complaint.status === 'open' ? 'selected' : '' %>>Open</option>
                <option value="in_progress" <%= complaint.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                <option value="resolved" <%= complaint.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Resolution Note (optional)</label>
              <textarea name="note" rows="3" placeholder="Add notes about the resolution..."
                class="w-full border rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--highlight-light)]"></textarea>
            </div>
            <button type="submit" class="btn-type-2">Save Update</button>
          </form>
        </div>

        <!-- COMMENTS -->
        <div class="bg-white rounded-2xl border p-6">
          <h3 class="font-semibold mb-6">Comments</h3>
          <div class="space-y-4">
            <% if (comments.length === 0) { %><p class="text-sm text-gray-400">No comments yet.</p><% } %>
            <% comments.forEach(cm => { %>
            <div class="flex gap-3">
              <div class="w-8 h-8 rounded-full bg-[var(--hover-color)] flex items-center justify-center text-white text-xs font-medium shrink-0">
                <%= cm.name.charAt(0).toUpperCase() %>
              </div>
              <div>
                <div class="flex items-center gap-2 mb-1">
                  <span class="text-sm font-medium"><%= cm.name %></span>
                  <span class="text-xs text-gray-400 capitalize px-2 py-0.5 bg-gray-100 rounded-full"><%= cm.role %></span>
                  <span class="text-xs text-gray-400"><%= new Date(cm.created_at).toLocaleString() %></span>
                </div>
                <p class="text-sm text-gray-700"><%= cm.message %></p>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>

      <!-- SIDEBAR -->
      <div class="bg-[var(--hover-color)] text-white rounded-2xl p-6 text-sm h-fit">
        <h4 class="font-semibold mb-4">Complaint #CMS<%= complaint.id %></h4>
        <p class="opacity-80 mb-2">Filed by: <strong><%= complaint.student_name %></strong></p>
        <p class="opacity-80">Update the status once you've taken action. Add notes to keep the student informed.</p>
      </div>
    </div>
  </main>
</div>
</body>
</html>
