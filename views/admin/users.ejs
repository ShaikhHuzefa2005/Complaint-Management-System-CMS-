<%- include('../partials/head') %>

<body class="bg-[var(--white)] text-[var(--highlight)]">
<div class="min-h-screen flex">

  <%- include('../partials/sidebar-admin') %>

  <main class="flex-1 p-8 md:p-10 space-y-8 overflow-auto">
    <header>
      <h1 class="text-3xl font-semibold text-[var(--highlight-light)]">Users</h1>
      <p class="mt-1 text-sm text-gray-500">Manage system users and access</p>
    </header>

    <%- include('../partials/flash') %>

    <section class="bg-white rounded-2xl border overflow-x-auto max-w-6xl">
      <table class="w-full text-left min-w-[600px]">
        <thead class="bg-gray-50 text-sm text-gray-600">
          <tr>
            <th class="px-6 py-4">Name</th>
            <th class="px-6 py-4">Email</th>
            <th class="px-6 py-4">Role</th>
            <th class="px-6 py-4">Joined</th>
            <th class="px-6 py-4">Status</th>
            <th class="px-6 py-4">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y">
          <% if (users.length === 0) { %>
          <tr>
            <td colspan="6" class="px-6 py-12 text-center text-gray-400">No users found.</td>
          </tr>
          <% } else { %>
          <% users.forEach(u => { %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 font-medium"><%= u.name %></td>
            <td class="px-6 py-4 text-sm"><%= u.email %></td>
            <td class="px-6 py-4">
              <% if (u.role === 'student') { %>
                <span class="px-3 py-1 rounded-full text-xs bg-blue-100 text-blue-700">Student</span>
              <% } else if (u.role === 'staff') { %>
                <span class="px-3 py-1 rounded-full text-xs bg-yellow-100 text-yellow-700">Staff</span>
              <% } else { %>
                <span class="px-3 py-1 rounded-full text-xs bg-purple-100 text-purple-700">Admin</span>
              <% } %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= new Date(u.created_at).toLocaleDateString() %></td>
            <td class="px-6 py-4">
              <% if (u.is_active) { %>
                <span class="text-green-600 font-medium text-sm">Active</span>
              <% } else { %>
                <span class="text-red-500 font-medium text-sm">Inactive</span>
              <% } %>
            </td>
            <td class="px-6 py-4">
              <% if (u.role !== 'admin' || u.id !== currentUser.id) { %>
              <div class="flex gap-2">
                <form action="/admin/users/<%= u.id %>/toggle" method="POST" class="inline">
                  <button type="submit" class="btn-type-1 text-xs">
                    <%= u.is_active ? 'Deactivate' : 'Activate' %>
                  </button>
                </form>
                <form action="/admin/users/<%= u.id %>/delete" method="POST" class="inline"
                  onsubmit="return confirm('Delete this user permanently?')">
                  <button type="submit" class="text-xs px-3 py-2 border border-red-300 text-red-500 rounded-md hover:bg-red-50">
                    Delete
                  </button>
                </form>
              </div>
              <% } else { %>
                <span class="text-xs text-gray-400">â€”</span>
              <% } %>
            </td>
          </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>
</div>
</body>
</html>
