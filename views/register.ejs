<%- include('partials/head') %>

<body class="bg-[var(--white)] min-h-screen flex items-center justify-center py-10">

<div class="w-full max-w-lg bg-white rounded-2xl shadow-[0_30px_80px_rgba(0,0,0,0.15)] p-10 mx-4">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-semibold text-[var(--highlight)]">CMS</h1>
    <p class="mt-2 text-gray-500">Centralized Complaint Management System</p>
  </div>

  <%- include('partials/flash') %>

  <form action="/register" method="POST" class="space-y-5">
    <div>
      <label class="block text-sm font-medium mb-2">Register as</label>
      <select name="role" class="w-full border rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--highlight-light)]" required>
        <option value="">Select role</option>
        <option value="student">Student</option>
        <option value="staff">Staff</option>
        <option value="admin">Admin</option>
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium mb-2">Full Name</label>
      <input type="text" name="name" placeholder="John Doe"
        class="w-full border rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--highlight-light)]" required />
    </div>
    <div>
      <label class="block text-sm font-medium mb-2">Email</label>
      <input type="email" name="email" placeholder="you@example.com"
        class="w-full border rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--highlight-light)]" required />
    </div>
    <div>
      <label class="block text-sm font-medium mb-2">Password</label>
      <input type="password" name="password" placeholder="Minimum 6 characters"
        class="w-full border rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--highlight-light)]" required />
    </div>
    <div>
      <label class="block text-sm font-medium mb-2">Confirm Password</label>
      <input type="password" name="confirmPassword" placeholder="Repeat password"
        class="w-full border rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--highlight-light)]" required />
    </div>
    <div class="flex items-start gap-2 text-sm">
      <input type="checkbox" id="terms" name="terms" class="accent-[var(--highlight)] mt-1" required>
      <label for="terms">I agree to the <span class="text-[var(--highlight-light)]">Terms</span> and <span class="text-[var(--highlight-light)]">Privacy Policy</span></label>
    </div>
    <button type="submit" class="btn-type-2 w-full py-3">Create Account</button>
  </form>

  <p class="text-center text-sm text-gray-500 mt-8">
    Already have an account?
    <a href="/login" class="text-[var(--highlight-light)] font-medium hover:underline">Login</a>
  </p>
  <p class="text-center text-sm text-gray-500 mt-2">
    <a href="/" class="text-[var(--highlight-light)] hover:underline">‚Üê Back to Home</a>
  </p>
</div>

</body>
</html>
